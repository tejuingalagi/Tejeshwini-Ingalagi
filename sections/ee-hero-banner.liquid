{% comment %} EE Hero Banner Section {% endcomment %}
<section class="ee-hero-banner">
  <div class="container">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.cta_link }}" class="cta-button">{{ section.settings.cta_text }}</a>
  </div>
</section>

{% schema %}
{
  "name": "EE Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our exclusive collection"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link",
      "default": "/collections/all"
    }
  ]
}
{% endschema %}

<style>
.ee-hero-banner {
  background: #f5f5f5;
  padding: 100px 20px;
  text-align: center;
  position: relative;
}
.ee-hero-banner h1 {
  font-size: 3rem;
  color: #111;
  margin-bottom: 20px;
}
.ee-hero-banner p {
  font-size: 1.5rem;
  color: #555;
  margin-bottom: 40px;
}
.cta-button {
  padding: 15px 30px;
  background: #ff0000;
  color: white;
  text-decoration: none;
  font-weight: bold;
  display: inline-block;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.cta-button:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}
@media(max-width:768px){
  .ee-hero-banner {
    padding: 60px 15px;
  }
  .ee-hero-banner h1 {
    font-size: 2rem;
  }
  .ee-hero-banner p {
    font-size: 1.2rem;
  }
  .cta-button {
    padding: 12px 25px;
  }
}
</style>
